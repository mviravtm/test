{
  "name": "Plasma-Authorization-App",
  "version": "1.0.0",
  "description": "TemplateMonster Boilerplate for react/redux applications",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:tm-frontend-qualification/2018/4-Plasma-Authorization-App.git"
  },
  "scripts": {
    "clean": "rimraf build public",
    "start": "export NODE_ENV='local.sample' && webpack-dev-server",
    "build": "npm run clean && export NODE_ENV=production && webpack -p --progress --colors --display-reasons --verbose --display-chunks",
    "build:production": "npm run clean && export NODE_ENV=production && webpack -p --progress --colors --display-reasons --verbose --display-chunks",
    "build:beta": "npm run clean && export NODE_ENV=beta && webpack",
    "build:dev": "npm run clean && export NODE_ENV=dev && webpack -p --progress --colors --display-reasons --verbose --display-chunks",
    "build:local": "npm run clean && export NODE_ENV='local.sample' && webpack -p --progress --colors --display-reasons --verbose --display-chunks",
    "build:doc": "documentation build src/*.js* -o public -f html",
    "test": "export NODE_ENV=test && jest --no-cache",
    "test:watch": "export NODE_ENV=test && jest --no-cache --watch",
    "test:coverage": "export NODE_ENV=test && jest --no-cache --coverage",
    "lint": "npm run format && npm-run-all lint:*",
    "lint:js": "eslint ./src/** --ext .jsx,.js --color -f stylish --fix",
    "lint:css": "stylelint './src/**/*.pcss' --color -r -f verbose --fix",
    "lint:doc": "documentation lint src/**/*.js*",
    "format": "prettier --write --single-quote --print-width 100 --trailing-comma all 'src/**/*.{js,jsx}'"
  },
  "lint-staged": {
    "*.{jsx,js}": [
      "npm run format",
      "eslint --color -f stylish --fix",
      "git add"
    ],
    "*.pcss": [
      "stylelint --color -r -f verbose --fix",
      "git add"
    ]
  },
  "keywords": [
    "TemplateMonster",
    "React",
    "Redux",
    "Application",
    "Boilerplate"
  ],
  "author": "tmfrontend4",
  "license": "CC-BY-4.0",
  "dependencies": {
    "@plasma-platform/isomorphic-style-loader": "^4.1.0",
    "@plasma-platform/plasma-quark": "^4.1.8",
