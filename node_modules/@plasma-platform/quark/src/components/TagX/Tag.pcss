@import "@plasma-platform/tm-css/helpers.pcss";

@define-mixin common-tag-clear {
  @mixin unselectable;
  @mixin T 6;
  background-color: transparent;
  border-radius: $border_radius;
  height: $gap_small;
  box-sizing: border-box;
  display: inline-block;
  padding: 1px $gap_min;
  border-width: 1px;
  border-style: solid;
  color: $color_main_top;
  border-color: $color_main_4;
  position: relative;
  top: 0;
  transition:
    color .25s,
    background-color .25s,
    border-color .25s;
  transform: translateZ(0);
}

.Tag {
  @mixin common-tag-clear;

  &--loading {
    color: transparent;
    background: $color_main_4;
    border-color: transparent;
  }

  &--from {
    @mixin T 1;
    padding: 1px 5px;
  }

  &--heigh {
    background-color: $color_success_focus;
    border-color: $color_success_focus;
    color: $color_white;
    line-height: 18px;
  }

  &--normal {
    background-color: $color_important_focus;
    border-color: $color_important_focus;
    color: $color_white;
    line-height: 18px;
  }

  &--medium {
    background-color: $color_warning_active;
    border-color: $color_warning_active;
    color: $color_white;
    line-height: 18px;
  }

  &--low {
    background-color: $color_error_active;
    border-color: $color_error_active;
    color: $color_white;
    line-height: 18px;
  }

  &--none {
    background-color: $color_main_6;
    border-color: $color_main_6;
    color: $color_white;
    line-height: 18px;
  }

  button& {
    @mixin clear-button;
    @mixin common-tag-clear;
    cursor: pointer;
    color: $color_main_top;

    &--large {
      @mixin T 3;
      color: $color_main_top;
      height: $gap_middle;
      padding: 9px $gap_small 8px;

      &.Tag--from {
        @mixin T 1;
        color: $color_white;
      }

      .Tag {
        &__Icon {
          width: $gap_min;
          height: $gap_min;
          margin: 5px 15px 6px;
        }

        &__From {
          bottom: 2px;
          color: $color_main_2;
        }
      }
    }

    &:hover {
      border-color: $color_important_focus;
      color: $color_important_focus;

      .Tag__Icon {
        fill: $color_important_focus;
      }
    }

    &:active {
      border-color: $color_important_focus;
      background-color: $color_important_focus;
      color: $color_white;
      top: 1px;

      .Tag__Icon {
        fill: $color_white;
      }
    }

    &[disabled] {
      border-color: $color_main_3;
      color: $color_main_4;

      .Tag__Icon {
        fill: $color_main_4;
      }
    }

    &.Tag {
      &--removable {
        padding-right: 0;

        .Tag__Icon {
          fill: $color_main_4;
        }

        &:hover {
          border-color: $color_error_active;
          color: $color_error_active;

          .Tag__Icon {
            fill: $color_error_active;
          }
        }

        &:active {
          border-color: $color_error_active;
          background-color: $color_error_active;
          color: $color_white;
          top: 1px;

          .Tag__Icon {
            fill: $color_white;
          }
        }

        &[disabled] {
          border-color: $color_main_3;
          color: $color_main_4;

          .Tag__Icon {
            fill: $color_main_3;
          }
        }
      }
    }
  }

  &__Icon {
    width: 5px;
    height: 5px;
    margin: 5px 5px 4px;
    vertical-align: middle;
    display: inline-block;
    transition: fill .25s;
    fill: $color_main_top;
  }

  &__From {
    @mixin T 6;
    position: relative;
    bottom: 3px;
    color: $color_main_2;
  }
}
