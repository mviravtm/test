@keyframes TMFadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes TMFadeOut {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@keyframes TMFadeInScaleIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes TMFadeOutScaleOut {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(0.8);
  }
}

@keyframes TMShake {
  0%,
  100% {
    transform: translate(0, 0);
  }
  10%,
  50%,
  90% {
    transform: translate(-10px, 0);
  }
  30%,
  70% {
    transform: translate(10px, 0);
  }
}