@define-mixin BoxSizing $value: border-box {
  box-sizing: $value;

  *,
  *::before,
  *::after {
    box-sizing: $value;
  }
}

@define-mixin WrapperSize {
  margin-left: auto;
  margin-right: auto;
  @media (max-width: 1309px) {
    max-width: $content_small;
  }
  @media (min-width: 1310px) and (max-width: 1599px) {
    max-width: $content_middle;
  }
  @media (min-width: 1600px) {
    max-width: $content_large;
  }
}

@define-mixin ContentSize {
  @media (max-width: 1309px) {
    padding-left: calc((100vw - $content_small)/2);
    padding-right: calc((100vw - $content_small)/2);
  }
  @media (min-width: 1310px) and (max-width: 1599px) {
    padding-left: calc((100vw - $content_middle)/2);
    padding-right: calc((100vw - $content_middle)/2);
  }
  @media (min-width: 1600px) {
    padding-left: calc((100vw - $content_large)/2);
    padding-right: calc((100vw - $content_large)/2);
  }
}

@define-mixin LibrarieContainer {
    @mixin BoxSizing;
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;

    @media (min-width: 720px) {
      padding: 0 40px;
    }

    @media (min-width: 1340px) {
      padding: 0 60px;
    }

    @media (min-width: 1520px) {
      padding: 0 80px;
      width: 1520px;
    }
}
